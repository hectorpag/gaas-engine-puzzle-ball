            <input type="radio" name="Answer" value="2" id="answerInput2" />
            <label for="answerInput2" id="answerLabel2">Answer 2</label>
        </div>
        <div>
            <input type="radio" name="Answer" value="3" id="answerInput3" />
            <label for="answerInput3" id="answerLabel3">Answer 3</label>
        </div>
        <div>
            <input type="radio" name="Answer" value="4" id="answerInput4" />
