    <p id="questionContent">
        Question
    </p>
    <div id="questionResponses">
        <div>
            <input type="radio" name="Answer" value="1" id="answerInput1" checked="checked" />
            <label for="answerInput1" id="answerLabel1">Answer 1</label>
        </div>
